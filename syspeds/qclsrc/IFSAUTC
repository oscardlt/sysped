             PGM
 /*****************************************************************************/
 /* GÅR GJENNOM IFSMAPPE OG SETTER EIER TIL SY400USR OG PUBLIC KAN            */
 /* GJØRE ALT MED DOKUMENTET ALLE ANDRE SLETTES                               */
 /*****************************************************************************/

             DCL        VAR(&DIR) TYPE(*CHAR) LEN(100)
/*______________*/
/* LES FIRMAFIL */
/*""""""""""""""*/
             DCLF       FILE(FIRMARC) RCDFMT(*ALL)
             RCVF       DEV(*FILE) RCDFMT(*FILE)

/*----------------------------*/
/* TAR GRUNNMAPPEN FØRST      */
/*----------------------------*/
             CHGVAR     VAR(&DIR) VALUE(&ARCANE)

             CRTPF      FILE(QTEMP/XIFSAUT) RCDLEN(132)
             MONMSG     MSGID(CPF0000)
             CALL       PGM(IFSAUTR) PARM(&DIR)
/*----------------------------*/
/* DERETTER MERGE BIBLIOTEKET */
/*----------------------------*/
             CHGVAR     VAR(&DIR) VALUE(&ARCANE *TCAT '/mrg')
             CALL       PGM(IFSAUTR) PARM(&DIR)
             ENDPGM
