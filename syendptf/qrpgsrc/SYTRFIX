      *****************************************************************
      *** PROGRAM FOR Å MERKE AVREGNET TURER FRAM TIL OG MED DATO   ***
      *****************************************************************
N01  FTURER14   UF   E           K DISK
N01  F                                     RENAME(turerr:turerx)
     FTURER11   UF   E           K DISK
     FSYTRFIXD  CF   E             WORKSTN
      *
     C                   EXSR      INIT
      *
     C     START         TAG
     C                   EXFMT     VARELI
     C     *IN03         IFEQ      '1'
     C                   GOTO      SLUTT
     C                   END
N01  C     wstur         ifeq      *zeros
     C     WSTRAN        IFEQ      *ZEROS
     C                   GOTO      START
     C                   END
     C     WSDATO        IFLT      20000101
     C                   GOTO      START
     C                   END
     c                   else
n01  c     wstur         chain     turer14                            70
n01  C   70              GOTO      START
n01  C     TUAVRE        ifeq      'X'
n01  C                   UPDATE    TURERX
n01  c                   goto      start
n01  c                   else
n01  C                   MOVE      'X'           TUAVRE
n01  C                   MOVE      FIXTXT        TUSJN2
n01  C                   UPDATE    TURERX
n01  c                   move      wstur         wsturs            8 0
n01  c                   goto      start
N01  C                   END
N01  C                   END
      *
      * OPPDATER
      * LAGRE ET FLAGG I SJÅFØRNAVN 2
     C     KEY           SETLL     TURER11
     C     KEY           READE     TURER11                                50
     C     *IN50         DOWEQ     '0'
     C     TUDT          IFNE      *ZEROS
     C     TUDT          ANDLE     WSDATO
     C     TUAVRE        ANDNE     'X'
     C                   MOVE      'X'           TUAVRE
     C                   MOVE      FIXTXT        TUSJN2
     C                   END
     C                   UPDATE    TURERR
     C     KEY           READE     TURER11                                50
     C                   END
      *
     C     SLUTT         TAG
     C                   SETON                                        LR
     C                   RETURN
      ***********************************************
     C     INIT          BEGSR
      ***********************************************
      *
     C     KEY           KLIST
     C                   KFLD                    YST
     C                   KFLD                    WSTRAN
     C                   MOVE      ' '           YST               1
      *
     C                   MOVEL     'SYTRFIX-'    FIXTXT           14
     C                   MOVEL     UYEAR         FIXÅM             4 0
     C                   MOVE      UMONTH        FIXÅM
     C                   MOVEL     FIXÅM         FIXÅMD            6 0
     C                   MOVE      UDAY          FIXÅMD
     C                   MOVE      FIXÅMD        FIXTXT
     C                   ENDSR
