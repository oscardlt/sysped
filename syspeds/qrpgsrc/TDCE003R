      /free
        JSONstring='{'
        +'¬user¬ : ¬'+%trim(WSUSER)+'¬, '
        +'¬thgft1¬ : ¬'+%trim(THGFT1)+'¬, '
        +'¬thgadk¬ : ¬'+%trim(THGADK)+'¬, '
        +'¬errMsg¬ : ¬'+%trim(Error)+'¬, ';
      /end-free
