             PGM        PARM(&FIL &LIB &MBR &STMF &RCDLEN &ENDLIN)
             DCL        VAR(&FIL) TYPE(*CHAR) LEN(10)
             DCL        VAR(&LIB) TYPE(*CHAR) LEN(10)
             DCL        VAR(&MBR) TYPE(*CHAR) LEN(10)
             DCL        VAR(&STMF) TYPE(*CHAR) LEN(50)
             DCL        VAR(&RCDLEN) TYPE(*DEC) LEN(4 0)
             DCL        VAR(&ENDLIN) TYPE(*CHAR) LEN(6)

             IF         COND(&RCDLEN = 0) THEN(+
             CHGVAR     VAR(&RCDLEN) VALUE(80))
             IF         COND(&LIB = ' ') THEN(+
             CHGVAR     VAR(&LIB) VALUE('*LIBL'))
             IF         COND(&MBR = ' ') THEN(+
             CHGVAR     VAR(&MBR) VALUE('*FIRST'))


             DLTF  QTEMP/TOPCF
             MONMSG CPF0000
 /*HVIS DET ER VANLIG FYSISK FILE... *NOCHK */
             CRTPF      FILE(QTEMP/TOPCF) RCDLEN(&RCDLEN) +
                          SIZE(1000000 10000)
             CPYF       FROMFILE(&LIB/&FIL) TOFILE(QTEMP/TOPCF) +
                          FROMMBR(&MBR) MBROPT(*REPLACE) FMTOPT(*NOCHK)
 /*HVIS DET F.EKS ER  SOURCE-FILE... *CVTSRC */
             MONMSG     MSGID(CPF2817) EXEC(CPYF FROMFILE(&LIB/&FIL) +
                          TOFILE(QTEMP/TOPCF) FROMMBR(&MBR) +
                          MBROPT(*REPLACE) FMTOPT(*CVTSRC))
             CPYTOSTMF  +
                          FROMMBR('/QSYS.LIB/QTEMP.LIB/TOPCF.FILE/TOP+
                          CF.MBR') TOSTMF(&STMF) STMFOPT(*REPLACE) +
                          CVTDTA(*AUTO) STMFCODPAG(*PCASCII) +
                          ENDLINFMT(&ENDLIN)
             ENDPGM

