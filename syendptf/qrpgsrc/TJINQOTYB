          +'¬prtFlyFr¬ : ¬'+%trim(KO2FF)+'¬, '
          +'¬mvaK¬ : ¬'+%trim(KO2MVK)+'¬, '
          +'¬mvaS¬ : ¬'+%trim(KO2MVS)+'¬, '
          +'¬statis¬ : ¬'+%trim(KO2ST)+'¬, '
          +'¬kopSta¬ : ¬'+%trim(KO2PST)+'¬, '
          +'¬utlProv¬ : ¬'+%trim(KO2UTL)+'¬ ';
