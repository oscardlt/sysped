             PGM
             DCL        VAR(&BIBL) TYPE(*CHAR) LEN(10)
             DCL        VAR(&LIB) TYPE(*CHAR) LEN(10)
             RTVJOBA    CURLIB(&BIBL)
             RTVDTAARA  DTAARA(FIRMDT (151 10)) RTNVAR(&LIB)
             CHGCURLIB  CURLIB(&LIB)
             IF         COND(&BIBL *NE '*NONE') THEN(ADDLIBLE +
                          LIB(&BIBL))
             GO         MENU(MKOPIO)
             IF         COND(&BIBL *NE '*NONE') THEN(DO)
             RMVLIBLE   LIB(&BIBL)
             CHGCURLIB  CURLIB(&BIBL)
             ENDDO
             ELSE       CMD(CHGCURLIB CURLIB(*CRTDFT))
             ENDPGM
