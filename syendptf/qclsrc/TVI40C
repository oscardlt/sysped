             PGM        PARM(&EPOST &USER &AV &OP &MRG)
             DCL        VAR(&EPOST) TYPE(*CHAR) LEN(70)
             DCL        VAR(&USER) TYPE(*CHAR) LEN(10)
             DCL        VAR(&AV) TYPE(*CHAR) LEN(4)
             DCL        VAR(&OP) TYPE(*CHAR) LEN(7)
             DCL        VAR(&MRG) TYPE(*CHAR) LEN(1)
             DCL        VAR(&PARM) TYPE(*CHAR) LEN(500)

             CHGVAR     VAR(&PARM) VALUE(&EPOST *CAT &USER *CAT &AV +
                          *CAT &OP *CAT &MRG)

             CALL       PGM(TVI40CJ) PARM(&PARM)

             CHGJOB     CCSID(65535)
             CPYF       FROMFILE(WRKEPOW) TOFILE(ARKEPOW) MBROPT(*ADD)

             ENDPGM
