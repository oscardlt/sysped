/* ***************************************************************** */
/********************************************************************/
PGM
             DCL        VAR(&FILE) TYPE(*CHAR) LEN(10)
             DCL        VAR(&LIB) TYPE(*CHAR) LEN(10) +
                          VALUE('QTEMP     ')

             RMVM       FILE(&LIB/POSCL01) MBR(*ALL)
             MONMSG     MSGID(CPF0000)
             RMVM       FILE(&LIB/POSTL01) MBR(*ALL)
             MONMSG     MSGID(CPF0000)
             RMVM       FILE(&LIB/POSTL02) MBR(*ALL)
             MONMSG     MSGID(CPF0000)
             RMVM       FILE(&LIB/AVKRL01) MBR(*ALL)
             MONMSG     MSGID(CPF0000)
             RMVM       FILE(&LIB/POSAL01) MBR(*ALL)
             MONMSG     MSGID(CPF0000)
             RMVM       FILE(&LIB/POSBL01) MBR(*ALL)
             MONMSG     MSGID(CPF0000)
             RMVM       FILE(&LIB/POSBL02) MBR(*ALL)
             MONMSG     MSGID(CPF0000)
             RMVM       FILE(&LIB/POSBL03) MBR(*ALL)
             MONMSG     MSGID(CPF0000)
             RMVM       FILE(&LIB/POSBL04) MBR(*ALL)
             MONMSG     MSGID(CPF0000)
             RMVM       FILE(&LIB/POSBL05) MBR(*ALL)
             MONMSG     MSGID(CPF0000)
             RMVM       FILE(&LIB/POSBL06) MBR(*ALL)
             MONMSG     MSGID(CPF0000)


        /*___________________*/
        /* Hent liste POSAF  */
        /*"""""""""""""""""""*/
             CHGVAR     VAR(&FILE) VALUE('POSAF     ')
             CALL DELPOST2 PARM(&LIB &FILE)
        /*____________________*/
        /* Bygg ny logisk fil */
        /*""""""""""""""""""""*/
             ADDLFM     FILE(&LIB/POSAL01) MBR(POSAL01) +
                          DTAMBRS((&LIB/&FILE (&FILE)))



        /*___________________*/
        /* Hent liste POSBF  */
        /*"""""""""""""""""""*/
             CHGVAR     VAR(&FILE) VALUE('POSBF     ')
             CALL DELPOST2 PARM(&LIB &FILE)
        /*____________________*/
        /* Bygg ny logisk fil */
        /*""""""""""""""""""""*/
             ADDLFM     FILE(&LIB/POSBL01) MBR(POSBL01) +
                          DTAMBRS((&LIB/&FILE (&FILE)))
             ADDLFM     FILE(&LIB/POSBL02) MBR(POSBL02) +
                          DTAMBRS((&LIB/&FILE (&FILE)))
             ADDLFM     FILE(&LIB/POSBL03) MBR(POSBL03) +
                          DTAMBRS((&LIB/&FILE (&FILE)))
             ADDLFM     FILE(&LIB/POSBL04) MBR(POSBL04) +
                          DTAMBRS((&LIB/&FILE (&FILE)))
             ADDLFM     FILE(&LIB/POSBL05) MBR(POSBL05) +
                          DTAMBRS((&LIB/&FILE (&FILE)))
             ADDLFM     FILE(&LIB/POSBL06) MBR(POSBL06) +
                          DTAMBRS((&LIB/&FILE (&FILE)))



        /*___________________*/
        /* Hent liste POSCF  */
        /*"""""""""""""""""""*/
             CHGVAR     VAR(&FILE) VALUE('POSCF     ')
             CALL DELPOST2 PARM(&LIB &FILE)


        /*___________________*/
        /* Hent liste AVKRF  */
        /*"""""""""""""""""""*/
             CHGVAR     VAR(&FILE) VALUE('AVKRF     ')
             CALL DELPOST2 PARM(&LIB &FILE)
        /*____________________*/
        /* Bygg ny logisk fil */
        /*""""""""""""""""""""*/
             ADDLFM     FILE(&LIB/AVKRL01) MBR(MEMBL01) +
                          DTAMBRS((&LIB/&FILE (&FILE)))



        /*____________________*/
        /* Bygg ny FELLES logisk fil */
        /*""""""""""""""""""""*/
             ADDLFM     FILE(&LIB/POSTL01) MBR(POSTL01) +
                          DTAMBRS((&LIB/POSBF (POSBF)) +
                          (&LIB/POSCF (POSCF)))
             ADDLFM     FILE(&LIB/POSTL02) MBR(POSTL02) +
                          DTAMBRS((&LIB/POSBF (POSBF)) +
                          (&LIB/POSCF (POSCF)))

        /*____________________*/
        /* Tøm  MEMBF         */
        /*""""""""""""""""""""*/
             CLRPFM     FILE(&LIB/MEMBF)

