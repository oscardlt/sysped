    /* UTSKRIFT AV FERJEFAKTURA */
             PGM        PARM(&TNR &AVD &AAR &STMF &BANE &INFOP)
             DCL        VAR(&VAL) TYPE(*CHAR) LEN(3)
             DCL        VAR(&INFOP) TYPE(*CHAR) LEN(1)
             DCL        VAR(&STMF) TYPE(*CHAR) LEN(152)
             DCL        VAR(&BANE) TYPE(*CHAR) LEN(50)
             DCL        VAR(&BANES) TYPE(*CHAR) LEN(50)
             DCL        VAR(&QUSER) TYPE(*CHAR) LEN(10)
             DCL        VAR(&QJOB) TYPE(*CHAR) LEN(10)
             DCL        VAR(&QNBR) TYPE(*CHAR) LEN(6)
             DCL        VAR(&FILEN) TYPE(*CHAR) LEN(10) +
                          VALUE('SYTR52PF')
             DCL        VAR(&PRT) TYPE(*CHAR) LEN(10) /* Printernavn */
             DCL        VAR(&PT) TYPE(*CHAR) LEN(10)  /* Papirtype */
             DCL        VAR(&FHE) TYPE(*CHAR) LEN(1) VALUE('J') /* +
                          HEADING */
             DCL        VAR(&FBBS) TYPE(*CHAR) LEN(1) VALUE('C') /* +
                          BBS     */
             DCL        VAR(&AWB) TYPE(*CHAR) LEN(1) VALUE('K') /* +
                          SEPARAT GIRO*/
             DCL        VAR(&SG) TYPE(*CHAR) LEN(3)   /* SIGN    */
             DCL        VAR(&AVD) TYPE(*CHAR) LEN(4)  /* AVD     */
             DCL        VAR(&TNR) TYPE(*CHAR) LEN(8)  /*TRANSP   */
             DCL        VAR(&PER) TYPE(*CHAR) LEN(2)  /*PERMND   */
             DCL        VAR(&AAR) TYPE(*CHAR) LEN(2)  /*PERÅR    */
             DCL        VAR(&PRT2) TYPE(*CHAR) LEN(10)/* Prt  GIRO*/
             DCL        VAR(&PT2) TYPE(*CHAR) LEN(10) /* P.Type GIRO*/
             DCL        VAR(&TYP) TYPE(*CHAR) LEN(1) VALUE('A') +
                          /*T=TEST K=KOPI*/
             DCL        VAR(&TYPE) TYPE(*CHAR) LEN(1)
             OVRMSGF    MSGF(QUSERMSG) TOMSGF(SYMSGF)
             RTVJOBA    JOB(&QJOB) USER(&QUSER) NBR(&QNBR)
    /* */
    /* SKRIV FERJEFAKTURA       */
    /* */
   /* FAKTURA BLANKETT */
             RTVDTAARA  DTAARA(*LDA (48 1)) RTNVAR(&TYPE)
             IF         COND(&INFOP = 'D') THEN(DO)
             OVRPRTF    FILE(SYTR52PF) DEVTYPE(*AFPDS) PAGESIZE(72 +
                          80) CPI(10) OVRFLW(72) FONT(011) +
                          FRONTOVL(LOGOFAKT 0.1) OUTQ(OUTMAIL) +
                          TOSTMF(&BANE) WSCST(*PDF)
                          ENDDO
             IF         COND(&INFOP *NE 'D') THEN(DO)
             OVRPRTF    FILE(SYTR52PF) DEVTYPE(*AFPDS) PAGESIZE(72 +
                          80) CPI(10) OVRFLW(72) FONT(011) +
                          FRONTOVL(LOGOFAKT 0.1) OUTQ(OUTMAIL)
                          ENDDO
   /* SEPARAT GIRO */
             OVRPRTF FILE(SYTR52PG) OUTQ(OUTMAIL) +
                          PAGESIZE(24 80) CPI(10) OVRFLW(24) +
                          FORMTYPE(&PT2)
    /* */
             CALL       PGM(SYTR52) PARM(&AVD &SG &FHE &FBBS &AWB +
                          &TNR &AAR &PER &TYP &VAL)
             IF         COND(&INFOP = 'D') THEN(RETURN)
/*                                       */
/* LAGER PDF OG LEGGER I MAPPE          */
/* UTEN INFOPRINT                        */
/*                                       */
             IF         COND(&INFOP = 'N') THEN(DO)
             CVTSPLFPDF SPLF(&FILEN) JOB(&QNBR/&QUSER/&QJOB) +
                          TOPDF(&BANE) ORIENTAT(*V)
             DLTSPLF    FILE(&FILEN) JOB(&QNBR/&QUSER/&QJOB) +
                          SPLNBR(*LAST)
             MONMSG     MSGID(CPF0000)
                          ENDDO
/*                                       */
/*                                       */
/* LAGER PDF OG LEGGER I MAPPE           */
/* MED  INFOPRINT                        */
/*                                       */
             IF         COND(&INFOP = 'J') THEN(DO)
             CALL       PGM(INF001CL) PARM(&FILEN &QNBR &QUSER &QJOB +
                          &BANE)
                          ENDDO
/*                                       */
/*                                       */
/*                                       */
             RMVLIBLE   LIB(MMAIL)
             MONMSG     MSGID(CPF0000)
             ENDPGM
