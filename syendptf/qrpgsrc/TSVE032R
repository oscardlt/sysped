     C                   EVAL      XSVEF_VAKD=SVEF_VAKD
     C                   EVAL      XSVEF_VAKU=SVEF_VAKU
     C                   EVAL      XSVEF_FABL=SVEF_FABL
     C                   UPDATE    SVEFR
     C                   ENDSR
