     C                                         :%addr(JSONstring)
     C                                         :%len(JSONstring))
     C                   callp     wrtsection('JSONlin')

      * Quit
     C                   exsr      Exit


      *=====================================================================
      * Close output html and quit
      *=====================================================================
     C     Exit          begsr
      * Lukk fil
     C                   CLOSE     BRIDF
     C  N50              CLOSE     HEADF
     C  N50              CLOSE     CUOTIG

      * Do not delete the call to wrtsection with section name *fini.  It is needed
      * to ensure that all output html that has been buffered gets output.
     C                   callp     wrtsection('*fini')
      * Quit
     C                   MOVE      *ON           *INLR
     C                   return
     C                   endsr
      *
      *********************************************************
     C     Parse         Begsr
      *********************************************************
      * Get input
     C                   EVAL      WSUSER = zhbgetvar('USER')
     C                   EVAL      KODE   = zhbgetvar('KODE')
     C                   EVAL      AVD    = zhbgetvar('AVD')
     C                   EVAL      AVDN   = c2n2(AVD)
     C                   EVAL      OPD    = zhbgetvar('OPD')
     C                   EVAL      OPDN = c2n2(OPD)
     C                   EVAL      WSFRI  = zhbgetvar('COFRI')
     C     LO:UPC        XLATE     WSFRI         WSFRI
      *
     c                   endsr
      *
      *
      ***********************************************
     C     SkrivListe    BEGSR
      ***********************************************
     C     HEADFK        CHAIN     HEADF
      * Liste over gyldige koder
      * prio = 1 = Kode / kunde / avd
      * prio = 2 = Kode / kunde / 0
      * SOM KUNDE SJEKKES DET KUN MOT FRAKTBETALER ...  (etter dialog med Bring.)
      * (men legger tester slik at det ikke MÅ være transp-modul for så slå til)
     c                   move      HEKNSF        COKUNR
     c                   if        COKUNR = *zeros
     c                   move      HEKNKF        COKUNR
     c                   endif
     c                   if        trkdff='K' and
     c                             HEKNKF <> *zeros
     c                   move      HEKNKF        COKUNR
     c                   endif
      *
     c                   eval      COAVD = HEAVD
      *
     c     StrLes        tag
     C     CUOTIGkey     SETLL     CUOTIG
     C     CUOTIGkey     READE     CUOTIG                                 55
     C                   DOW       not %eof
     C                   Add       1             AntLest
      * kode er oppgitt = søk etter match (hvis mins en i lista )
     c                   if        WSFRI <> *blanks
     c                   if        WSFRI = cofri
     c                   eval      OKkod = 'J'
     c                   endif
     c                   goto      NextRec
     c                   endif
      * ............................................................................................
      * Skriv en JSON-Array-linje pr menypunkt - komma før hvert nytt element
      * ............................................................................................
      /free
       if AntLest=1;
          JSONstring=*blanks;
          else;
          JSONstring=', ';
          endif;
       JSONstring=%trim(JSONstring)+'{'
          +'¬cokunr¬ : ¬'+%trim(%editc(cokunr:'Z'))+'¬, '
          +'¬coavd¬ : ¬'+%trim(%editc(coavd:'Z'))+'¬, '
          +'¬cofri¬ : ¬'+%trim(cofri)+'¬, '
          +'¬cotxt¬ : ¬'+%trim(cotxt)+'¬}';
      /end-free
     C                   call      'JSONFIX'
     C                   parm                    JSONstring
     C                   CALLP     updHTMLvar2('JSONstring'
     C                                         :%addr(JSONstring)
     C                                         :%len(JSONstring))
     C                   callp     wrtsection('JSONlin')

     c     NextRec       tag
     C     CUOTIGkey     READE     CUOTIG
     C                   ENDDO

      * hvis inge tilslag på spesifik avdeling - les generelt på kunden
     c                   if        AntLest = *zeros  and
     c                             COAVD <> *zeros
     c                   eval      COAVD = *zeros
     c                   goto      StrLes
     c                   endif
      *
     c                   if        WSFRI <> *blanks
     c                   if        AntLest <> *zeros and
     c                             OKkod <> 'J'
     C                   eval      Error = 'Ugyldig verdi - sjekk liste'
     c                   endif
     c                   endif
      *
     C                   ENDSR
      *
      *********************************************************
     C     INIT          Begsr
      *********************************************************
     C                   OPEN      BRIDF
      * Test innlogging
     C     WSUSER        CHAIN     BRIDF                              50
     C     BILIBL        ifeq      *blanks
     C                   callb     'INCGI'
     C                   parm                    BISTDL
     C                   else
     C                   call      BILIBL
     C                   end
      *
     C     HEADFK        KLIST
     C                   KFLD                    AVDN
     C                   KFLD                    OPDN
     C     CUOTIGKey     KLIST
     C                   KFLD                    BIFIRM
     C                   KFLD                    COKUNR
     C                   KFLD                    COAVD
     C                   KFLD                    KODE
      *
     C   50              eval      Error = 'Invalid userID'
     C  N50              OPEN      HEADF
     C  N50              OPEN      CUOTIG

     c                   endsr
