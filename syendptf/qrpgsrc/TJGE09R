      /free
          JSONstring=*blanks;
       JSONstring=%trim(JSONstring)+'{'
          +'¬frtavd¬ : ¬'+%trim(%editc(frtavd:'Z'))+'¬, '
          +'¬frtopd¬ : ¬'+%trim(%editc(frtopd:'Z'))+'¬, '
N01       +'¬frreff¬ : ¬'+%trim(FRREFF)+'¬, '
N01       +'¬frunik¬ : ¬'+%trim(%editc(FRUNIK:'Z'))+'¬, '
