      *********************************************************************
      *
CRTPG+*  CRTPGM SYSPED/TSVI042R MODULE(*LIBL/TSVI042R *LIBL/INCGI)
CRTPGM*        ACTGRP(*NEW) AUT(*USE)
      *
      *********************************************************************
      /copy SYSPEDS/qrpgsrcpy,hspecs
      /copy SYSPEDS/qrpgsrcpy,hspecsbnd
      *********************************************************************
     FBRIDF     IF   E           K DISK    USROPN
      *--------------------------------------------------------------------
      * Variables common to all CGIs
      *--------------------------------------------------------------------
      /copy SYSPEDS/qrpgsrcpy,prototypeb
      /copy SYSPEDS/qrpgsrcpy,usec
      /copy SYSPEDS/qrpgsrcpy,variables3
     ‚*  Prototype for 'JSONFIX'
     d jsonfix         pr                  extpgm('JSONFIX')
     d jsonstring_                         like(jsonstring)
     ‚*  Prototype for 'INCGI'
     d incgi           pr                  extproc('INCGI')
     d bistdl_                             like(bistdl)
     ‚*  Prototype for variabel program
     D Varpgm          Pr                  ExtPgm(BILIBL)
      * Varible for
     D WSUSER          S             10
     D JSONstring      s          32000
     D Error           S            150
     D AntLest         S              9  0
     d myrows          s             10i 0
     d  X              S              5  0
     d  WERR           S              1
     d  W              S             20
     d  SVIW_KNNR      s              8S 0
     d  SVIW_KNSO      s             35
     d  SVIW_KOTA      s              5S 0
     d  SVIW_KOSL      s              4
     d  SVIW_VASL      s             70
     d  SVIW_GODM      s             42
     d  SVIW_VATA      s              8
     d  SVIW_ULKD      s              2
     d  SVIW_BRUT      s             14S 3
     d  SVIW_EUP1      s              4
     d  SVIW_NETO      s             14S 3
     d  SVIW_KONO      s              3
     d  SVIW_ANKV      s             10S 0
     d  SVIW_SUKO      s              5
     d  SVIW_SUTX      s             70
     d  SVIW_ATIN      s              3
     d  SVIW_FABL      s             11S 3
     d  SVIW_BIT1      s              4
     d  SVIW_BII1      s             35
     d  SVIW_CALL      s              2

      *get input-string
      /copy syspeds/qrpgsrcpy,prolog3
        /free

        // Parse input
         exsr Parse;
        // Open files etc
         exsr Init;

       gethtmlifs(
       '/syspeddev/html/JSON.html':
       '/CGITAG/');
       wrtsection('top');

       //...........................................................................................
       //skriv JSON-Object start (alltid '{' + x ant param. m/komma mellom (IKKE komma etter siste))
       //...........................................................................................

        JSONstring='{'
        +'¬user¬ : ¬'+%trim(WSUSER)+'¬, '
        +'¬errMsg¬ : ¬'+%trim(Error)+'¬, ';

       //JSONfix escaper " i tekst,  for deretter å bytte ¬->"

       jsonfix ( jsonstring );

       updhtmlvar2('JSONstring'
                  :%addr(jsonstring)
                  :%len(jsonstring));
       wrtsection('JSONlin');

       //...........................................................................................
       // Skriv JSON-LISTE Start (en liste er EN parameter(fra [ til   )
       //..........................................................................................
       jsonstring ='"kundvaradd" : [';

       updhtmlvar2('JSONstring'
                  :%addr(jsonstring)
                  :%len(jsonstring));
       wrtsection('JSONlin');

       if error = *blanks;
         // Hæmta til array
         exsr sradd;
         // Avsluta
         exsr avslut;
       endif;
       // ..........................................................................................
       // Skriv JSON-Liste/Array  Avslutning
       // ..........................................................................................
       jsonstring =']';
       updhtmlvar2('JSONstring'
                  :%addr(jsonstring)
                  :%len(jsonstring));
       wrtsection('JSONlin');
       // ..........................................................................................
       // Skriv JSON-string Avsluttning
       // ..........................................................................................
       jsonstring ='}';
       updhtmlvar2('JSONstring'
                  :%addr(jsonstring)
                  :%len(jsonstring));
       wrtsection('JSONlin');

       // Quit
       exsr exit;

       //=====================================================================
       // Close output html and quit
       //=====================================================================
       begsr exit;
         // Lukk fil
         close bridf;

         // Do not delete the call to wrtsection with section name *fini.  It is needed
         // to ensure that all output html that has been buffered gets output.
         wrtsection('*fini');
         // Quit
         *inlr = *on;
         return;
       endsr;
       //********************************************************
       begsr parse;
       //********************************************************
       // Get input
         wsuser    = zhbgetvar('USER');
         w         = zhbgetvar('SVIW_KNNR');
         SVIW_KNNR = c2n2(w);
         SVIW_KNSO = zhbgetvar('SVIW_KNSO');
         w         = zhbgetvar('SVIW_KOTA');
         SVIW_KOTA = c2n2(w);
         SVIW_KOSL = zhbgetvar('SVIW_KOSL');
         SVIW_VASL = zhbgetvar('SVIW_VASL');
         SVIW_GODM = zhbgetvar('SVIW_GODM');
         SVIW_VATA = zhbgetvar('SVIW_VATA');
         SVIW_ULKD = zhbgetvar('SVIW_ULKD');
         w         = zhbgetvar('SVIW_BRUT');
         SVIW_BRUT = c2n2(w);
         SVIW_EUP1 = zhbgetvar('SVIW_EUP1');
         w         = zhbgetvar('SVIW_NETO');
         SVIW_NETO = c2n2(w);
         SVIW_KONO = zhbgetvar('SVIW_KONO');
         w         = zhbgetvar('SVIW_ANKV');
         SVIW_ANKV = c2n2(w);
         SVIW_SUKO = zhbgetvar('SVIW_SUKO');
         SVIW_SUTX = zhbgetvar('SVIW_SUTX');
         SVIW_ATIN = zhbgetvar('SVIW_ATIN');
         w         = zhbgetvar('SVIW_FABL');
         SVIW_FABL = c2n2(w);
         SVIW_BIT1 = zhbgetvar('SVIW_BIT1');
         SVIW_BII1 = zhbgetvar('SVIW_BII1');
         SVIW_CALL = zhbgetvar('SVIW_CALL');

       endsr;
       //********************************************************
       begsr init;
       //********************************************************
         open bridf;
         // Test innlogging
         chain wsuser bridf;
         *in50 = not %found;

         if *in50 = *off;
           if bilibl = *blanks;
             incgi ( bistdl );
           else;

             Monitor;
                   Varpgm();
                 On-Error;
                   //
                 EndMon;

           endif;
         else;

           error = 'Invalid userID';
         endif;

       endsr;
        // __________________________________________________
        // Addera post till fil                         SRADD
        // """"""""""""""""""""""""""""""""""""""""""""""""""
           begsr sradd;

          exec sql

          INSERT INTO SVIW
          (SVIW_KNNR, SVIW_KNSO, SVIW_KOTA, SVIW_KOSL, SVIW_VASL, SVIW_GODM,
          SVIW_VATA, SVIW_ULKD, SVIW_BRUT, SVIW_EUP1, SVIW_NETO, SVIW_KONO,
          SVIW_ANKV, SVIW_SUKO, SVIW_SUTX, SVIW_ATIN, SVIW_FABL, SVIW_BIT1,
          SVIW_BII1, SVIW_CALL)
          VALUES(:SVIW_KNNR, :SVIW_KNSO, :SVIW_KOTA, :SVIW_KOSL, :SVIW_VASL,
          :SVIW_GODM, :SVIW_VATA, :SVIW_ULKD, :SVIW_BRUT, :SVIW_EUP1,
          :SVIW_NETO, :SVIW_KONO, :SVIW_ANKV, :SVIW_SUKO, :SVIW_SUTX,
          :SVIW_ATIN, :SVIW_FABL, :SVIW_BIT1, :SVIW_BII1, :SVIW_CALL);

       endsr;
        // __________________________________________________
        // Avsluta                                     AVSLUT
        // """"""""""""""""""""""""""""""""""""""""""""""""""
           begsr avslut;
          JSONstring=*blanks;
       JSONstring=%trim(JSONstring)+'{'
          +'¬result¬ : ¬'+ 'ok' + '¬}';
         jsonfix (JSONstring);
       updhtmlvar2('JSONstring'
                  :%addr(jsonstring)
                  :%len(jsonstring));
         wrtsection ('JSONlin');

       endsr;
      /end-free
