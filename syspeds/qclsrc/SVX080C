             PGM
             DCL        VAR(&IN01) TYPE(*LGL) LEN(1)
             DCL        VAR(&OK) TYPE(*CHAR) LEN(1) VALUE('0')

             OVRMSGF    MSGF(QUSERMSG) TOMSGF(SYMSGF)
             CALL       PGM(SYFA00) PARM(&IN01)

             IF         COND(&IN01 = '0') THEN(DO)

             CALL       PGM(SVT061C) PARM(&OK)
             IF         COND(&OK = '1') THEN(DO)
             CALL       PGM(SVX080R)
             ENDDO

             ENDDO

             ENDPGM
