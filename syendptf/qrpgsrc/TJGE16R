      /copy SYSPEDS/qrpgsrcpy,hspecs
      /copy SYSPEDS/qrpgsrcpy,hspecsbnd
      *********************************************************************
     FBRIDF     IF   E           K DISK    USROPN
     FKODTA     IF   E           K DISK    USROPN
     FKODTALF   IF   E           K DISK    USROPN
     F                                     RENAME(KOAR:KOARA)
      *--------------------------------------------------------------------
      * Variables common to all CGIs
      *--------------------------------------------------------------------
      /copy SYSPEDS/qrpgsrcpy,prototypeb
      /copy SYSPEDS/qrpgsrcpy,usec
      /copy SYSPEDS/qrpgsrcpy,variables3
      *
      * Varible for
     D WSUSER          S             10
     D WIE             S              1
N02  D GetVal          S              1                                         J=Get/validate
     D JSONstring      s          32000
     D Error           S            150
     D AntLest         S              9  0
     D WA              S             15
     D WNAMN           S             33

      *get input-string
      /copy syspeds/qrpgsrcpy,prolog3

      * Parse input
     C                   exsr      Parse
      * Open files etc
     C                   EXSR      INIT
     C     ERROR         CABNE     *BLANKS       UTLES
      *
     c                   callp     gethtmlifs(
     C                             '/syspeddev/html/JSON.html':
     C                             '/CGITAG/')
     C                   callp     wrtsection('top')
N02   * sjekker før leseloopen for å kunne gi error i header
N02  c     GetVal        ifeq      'J'
N02  C  N50KODTAKEY      CHAIN     KODTA                              33
N02  C   33              eval      Error = 'Ugyldig avdeling'
N02  c                   endif
      *
      * ............................................................................................
      * skriv JSON-Object start..(alltid '{' + x ant param. m/komma mellom (IKKE komma etter siste))
      * ............................................................................................
      *
      /free
        JSONstring='{'
        +'¬user¬ : ¬'+%trim(WSUSER)+'¬, '
        +'¬ie¬ : ¬'+%trim(WIE)+'¬, '
        +'¬avd¬ : ¬'+%trim(%editc(WAVD:'Z'))+'¬, '
        +'¬namn¬ : ¬'+%trim(WNAMN)+'¬, '
N02     +'¬getVal¬ : ¬'+%trim(getVal)+'¬, '
        +'¬errMsg¬ : ¬'+%trim(Error)+'¬, ';
      /end-free
      * JSONfix escaper " i tekst,  for deretter å bytte ¬->"
     c                   call      'JSONFIX'
     c                   parm                    JSONstring
     C                   callp     updHTMLvar('JSONstring':JSONstring)
     C                   callp     wrtsection('JSONlin')
      *
      * ............................................................................................
      * Skriv JSON-LISTE Start (en liste er EN parameter(fra [ til   )
      * ............................................................................................
     c                   eval      JSONstring ='"avdelningar" : ['
     C                   callp     updHTMLvar('JSONstring':JSONstring)
     C                   callp     wrtsection('JSONlin')
      *
      * Hæmta avdelningar
      *
S02  c*    Error         ifeq      *blanks
N02  C*    *LOVAL        SETLL     KODTA
N02  C     KODTAKEY      SETLL     KODTA
     C     WNAMN         SETLL     KODTALF
     C     WNAMN         IFEQ      *BLANKS
     C                   READ      KODTA                                  55
     C                   ELSE
     C                   READ      KODTALF                                55
     C                   ENDIF
     C     *IN55         DOWEQ     *OFF


S02  C*                  IF        WAVD > 0
S02  C*    KOAAVD        CABLT     WAVD          NEXT
S02  C*                  ENDIF
N02  c     GetVal        ifeq      'J'
N02  c     KOAAVD        andne     WAVD
N02  c                   goto      UtLes
N02  c                   endif
     C                   Add       1             AntLest
      * ............................................................................................
      * Skriv en JSON-Array-linje pr menypunkt - komma før hvert nytt element
      * ............................................................................................
      /free
       if AntLest=1;
          JSONstring=*blanks;
          else;
          JSONstring=', ';
          endif;
       JSONstring=%trim(JSONstring)+'{'
          +'¬avd¬ : ¬'+%trim(%editc(KOAAVD:'Z'))+'¬, '
          +'¬namn¬ : ¬'+%trim(KOANVN)+'¬,'
          +'¬koaIE¬ : ¬'+%trim(KOAIE)+'¬,'
          +'¬koaLK¬ : ¬'+%trim(KOALK)+'¬}';
      /end-free
     C                   call      'JSONFIX'
     C                   parm                    JSONstring
     C                   callp     updHTMLvar('JSONstring':JSONstring)
     C                   callp     wrtsection('JSONlin')
N02  c     GetVal        ifeq      'J'
N02  c                   goto      UtLes
N02  c                   endif

     C     NEXT          TAG

     C     WNAMN         IFEQ      *BLANKS
     C                   READ      KODTA                                  55
     C                   ELSE
     C                   READ      KODTALF                                55
     C                   ENDIF
     C                   ENDDO
     C     UTLES         TAG
S02  c*                  endif
      * ............................................................................................
      * Skriv JSON-Liste/Array  Avslutning
      * ............................................................................................
     c                   eval      JSONstring =']'
     C                   callp     updHTMLvar('JSONstring':JSONstring)
     C                   callp     wrtsection('JSONlin')
      * ............................................................................................
      * Skriv JSON-string Avsluttning
      * ............................................................................................
     c                   eval      JSONstring ='}'
     C                   callp     updHTMLvar('JSONstring':JSONstring)
     C                   callp     wrtsection('JSONlin')
      *
      * Quit
     C                   exsr      Exit


      *=====================================================================
      * Close output html and quit
      *=====================================================================
     C     Exit          begsr
      * Lukk fil
     C                   CLOSE     BRIDF
     C  N50              CLOSE     KODTA
     C  N50              CLOSE     KODTALF

      * Do not delete the call to wrtsection with section name *fini.  It is needed
      * to ensure that all output html that has been buffered gets output.
     C                   callp     wrtsection('*fini')
      * Quit
     C                   MOVE      *ON           *INLR
     C                   return
     C                   endsr
      *
      *********************************************************
     C     Parse         Begsr
      *********************************************************
      * Get input
     C                   EVAL      WSUSER  = zhbgetvar('USER')
     C                   EVAL      WIE = zhbgetvar('IE')
     C                   EVAL      WA      = zhbgetvar('AVD')
     C                   EVAL      WAVD    = c2n2(WA)
     C                   EVAL      WNAMN   = zhbgetvar('NAMN')
N02  C                   EVAL      GETVAL  = zhbgetvar('GETVAL')
N02  C                   EVAL      GETVAL  = uppify(GETVAL)
     C
     c                   endsr
      *********************************************************
     C     INIT          Begsr
      *********************************************************
     C                   OPEN      BRIDF
      * Test innlogging
     C     WSUSER        CHAIN     BRIDF                              50
     C  N50BILIBL        ifeq      *blanks
     C                   callb     'INCGI'
     C                   parm                    BISTDL
     C                   else
     C                   call      BILIBL
     C                   end

     C     KODTAKEY      KLIST
     C                   KFLD                    WKOAUNI
     C                   KFLD                    WAVD
     C     *LIKE         DEFINE    KOAUNI        WKOAUNI
     C     *LIKE         DEFINE    KOAAVD        WAVD
     C                   EVAL      WKOAUNI = 'A'

     C   50              eval      Error = 'Invalid userID'
     C  N50              OPEN      KODTA
     C  N50              OPEN      KODTALF
     C                   IF        *IN50=*OFF
S02  C*                  IF        WAVD > 0
     C*    KODTAKEY      CHAIN     KODTA                              50
     C*  50              eval      Error = 'Department not found'
S02  C*                  ENDIF
     C                   ENDIF
     c                   endsr
