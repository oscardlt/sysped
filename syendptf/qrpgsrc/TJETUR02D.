     C     SLUTT         TAG
     C                   EXSR      EXIT
      *=====================================================================******
      * Parse input
      *=====================================================================******
     C     Parse         BEGSR
      * Get input
     C                   EVAL      WSUSER = zhbgetvar('USER')
     C                   EVAL      WSTUR   = zhbgetvar('WSTUR')
     C                   EVAL      BSTUR   = c2n2(WSTUR)
N01  C                   EVAL      WSUNIK  = zhbgetvar('WSUNIK')
N01  C                   EVAL      BSUNIK  = c2n2(WSUNIK)
     C                   ENDSR
      *=====================================================================******
      *  INITIER
      *=====================================================================******
     C     INIT          BEGSR
     C     ARKIVKEY      KLIST
     C                   KFLD                    ARSTAT
     C                   KFLD                    ARUNDE
     C                   MOVE      'A'           ARSTAT
     C                   MOVEL     'T:'          ARUNDE
     C                   MOVE      BSTUR         ARUNDE
N01  C                   IF        WSUNIK<>*BLANKS
N01  C                   MOVEL     'Z'           ARUNDE
N01  C*                  MOVE      BSTUR         ARUNDE
N01  C                   MOVE      BSUNIK        ARUNDE
N01  C                   ENDIF
     C     ARKEXTK       KLIST
     C                   KFLD                    ARFIRM
     C                   KFLD                    ARCEXT

     C                   OPEN      BRIDF
     C     WSUSER        CHAIN(N)  BRIDF                              50
      * En "standardvariant" libl: CALL bound (INCGI=*MODULE) med parameter.
     C     BILIBL        IFEQ      *BLANKS
     C                   CALLb     'INCGI'
     C                   PARM                    BISTDL
     C                   ELSE
      * Helt egen bibl.liste satt på user - normal CALL (BILIBL er "*pgm")
     C                   CALL      BILIBL
     C                   END
      * Odd/Even/Rowhead-farger,Logobilde,Språk,Intern/Ekstern bruker,  mm
     C                   CALL      'ESGETPAR'
     C                   PARM                    BIBRID
     C                   PARM                    BIFIRM
     C                   PARM                    BIKUNR
     C                   PARM                    BIKNG
     C                   PARM                    RowHead          10
     C                   PARM                    Odd              10
     C                   PARM                    Even             10
     C                   PARM                    LogoImg          50
     C                   PARM                    XSPRÅK            2
     C                   PARM                    XINTERN           1
     C                   PARM                    PARMDS1        1024
     C                   PARM                    PARMDS2        1024
     C                   PARM                    PARMDS3        1024
     C*                  MOVE      BIBRID        PABRID
     C*                  MOVE      *ZEROS        PAKUNR
     C   50              eval      Error = 'Invalid userID'
     C  N50              OPEN      ARKIVL11
     C  N50              OPEN      firmarc
     C  N50              OPEN      FIRM
     C  N50              OPEN      arktxt
     C  N50              OPEN      ARKEXT

     C  N50BIFIRM        CHAIN     FIRM                               33

     C     ENDINI        ENDSR
      *=====================================================================******
      *  AVSLUTT
      *=====================================================================******
     C     EXIT          BEGSR
     C                   close     BRIDF
     C  N50              CLOSE     ARKIVL11
     C  N50              CLOSE     firmarc
     C  N50              CLOSE     FIRM
     C  N50              CLOSE     arktxt
     C  N50              CLOSE     ARKEXT
     C  N50              CALLP     wrtsection('*fini')
     C                   EVAL      *INlr = *on
     C                   RETURN

     C                   ENDSR
      ***********************************************
     C     genbane       BEGSR
      ***********************************************
     C                   MOVE      *BLANKS       DOCTXT
     C                   MOVE      *BLANKS       DOCLNK
     C                   MOVE      ARKLAG        ARCEXT
     C     ARKEXTK       CHAIN     ARKEXT                             33
     C   33ARFIRM        CHAIN     FIRMARC                            33
N02  c     arbhis        ifne      *blanks
N02  c                   eval      arcane=arbhis
N02  c                   end
      * genererer bane for lagring
     C     DOCLNK        CAT       '/':0         DOCLNK
     C     DOCLNK        CAT       arcane:0      DOCLNK
     C     DOCLNK        CAT       '/':0         DOCLNK
     C     ARLINK        IFNE      *BLANKS
     C     DOCLNK        CAT       ArLink:0      DOCLNK
     C                   ELSE
     C                   END
     C     '.pdf'        SCAN      DOCLNK                                 33
     C  N33'.PDF'        SCAN      DOCLNK                                 33
     C  N33'.'           SCAN      arlink                                 33
     C  N33              IF        ARKLAG = *BLANKS
     C                   CAT       '.pdf':0      DOCLNK
     C                   END
s03  C*                  IF        ARRFK = *BLANKS
s03  C*                  EVAL      DOCTXT = ARTXT
s03  C*                  ELSE
s03  C*                  EVAL      DOCTXT = ARRFK
s03  C*                  ENDIF
N03  C                   EVAL      DOCTYP = ARTXT
N03  C                   EVAL      DOCTXT = ARRFK

     C                   ADD       1             ANTLEST
      /free
       if AntLest=1;
          JSONstring=*blanks;
          else;
          JSONstring=', ';
          endif;
       JSONstring=%trim(JSONstring)+'{'
N03     +'¬doctyp¬ : ¬'+%trim(DOCTYP)+'¬, '
        +'¬doctxt¬ : ¬'+%trim(DOCTXT)+'¬, '
N03     +'¬docdat¬ : ¬'+%trim(%editc(ARDATE:'X'))+'¬, '
N03     +'¬doctim¬ : ¬'+%trim(%editc(ARTIME:'X'))+'¬, '
        +'¬doclnk¬ : ¬'+%trim(DOCLNK)+'¬}';
      /end-free
