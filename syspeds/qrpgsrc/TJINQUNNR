     C                   callp     updHTMLvar('JSONstring':JSONstring)
     C                   callp     wrtsection('JSONlin')
      *
      * Hæmta UNkoder
      *
     c     Error         ifeq      *blanks
     C     unnr          SETLL     ADRUNNRF
     C                   READ      ADRUNNRF                               55
     C     *IN55         DOWEQ     *OFF
      * bedt om kun match ??
     c                   if        MatchOnly = 'J'                              full matc
     c                             or MatchOnly = 'E'                           Unnr/Emb-match
     c                             or MatchOnly = 'U'                           Unnr match
      * kun lik unnr (uavh av emb/indx)
     c                   if        ADUNNR<>unnr
     c                   goto      utles
     c                   endif
      * kun lik un/emb
     c                   if        MatchOnly = 'J'                              full matc
     c                             or MatchOnly = 'E'                           Unnr/Emb-match
     c                   if        ADEMBG<>embg
     c                   goto      next
     c                   endif
     c                   endif
      * ekssakt Un/emb/indx
     c                   if        MatchOnly = 'J'                              full matc
     c                   if        ADINDX<>indx
     c                   goto      next
     c                   endif
     c                   endif
     c                   endif
      * posten skal med ..
     C                   Add       1             AntLest
     c     Antlest       cabgt     maxles        Utles
      * ............................................................................................
      * Skriv en JSON-Array-linje pr menypunkt - komma før hvert nytt element
      * ............................................................................................
      /free
       if AntLest=1;
          JSONstring=*blanks;
          else;
          JSONstring=', ';
          endif;
       JSONstring=%trim(JSONstring)+'{'
          +'¬adunnr¬ : ¬'+%trim(ADUNNR)+'¬, '
          +'¬adembg¬ : ¬'+%trim(ADEMBG)+'¬, '
          +'¬adindx¬ : ¬'+%trim(ADINDX)+'¬, '
          +'¬adfakt¬ : ¬'+%trim(%editc(ADFAKT:'Z'))+'¬,'
          +'¬adtextK¬ : ¬'+%trim(%subst(ADTEXT:1:50))+'¬ ';
       if FullInfo='J';
        JSONstring=%trim(JSONstring)+', '
          +'¬adtext¬ : ¬'+%trim(ADTEXT)+'¬, '
          +'¬adklas¬ : ¬'+%trim(ADKLAS)+'¬, '
          +'¬adsedd¬ : ¬'+%trim(ADSEDD)+'¬, '
          +'¬adtres¬ : ¬'+%trim(ADTRES)+'¬ ';
       endif;
       JSONstring=%trim(JSONstring)+'}';
      /end-free
     C                   call      'JSONFIX'
     C                   parm                    JSONstring
     C                   callp     updHTMLvar('JSONstring':JSONstring)
     C                   callp     wrtsection('JSONlin')
      * ved get/Validate  er det kun en
     c     GetVal        ifeq      'J'
     c                   leave
     c                   endif

     C     NEXT          TAG

     C                   READ      ADRUNNRF                               55
     C                   ENDDO
     C     UTLES         TAG
     c                   endif
      * ............................................................................................
