      *********************************************************
     C     INIT          Begsr
      *********************************************************
     C                   OPEN      BRIDF
      * Test innlogging
     C     WSUSER        CHAIN     BRIDF                              50
     C     BILIBL        ifeq      *blanks
     C                   callb     'INCGI'
     C                   parm                    BISTDL
     C                   else
     C                   call      BILIBL
     C                   end

     C     KODTOK        KLIST
     C                   KFLD                    KO1UNI
     C                   KFLD                    OPDTYP
     C     KODT2K        KLIST
     C                   KFLD                    KO2UNI
     C                   KFLD                    OPDTYP
     C                   EVAL      KO1UNI  = 'OTY'
     C                   EVAL      KO2UNI  = 'O2Y'
     C     BrParKey      klist
     C                   kfld                    PABRID
     C                   kfld                    PAKUNR
     C                   kfld                    PAID
     C                   MOVE      BIBRID        PABRID
     C                   MOVE      *zeros        PAKUNR

     C   50              eval      Error = 'Invalid userID'
     C  N50              OPEN      BRPARF
     C  N50              OPEN      KODTOTY
     C  N50              OPEN      KODTOTLF
     C  N50              OPEN      KODTOT2
     C                   IF        *IN50=*OFF
     C                   IF        GetVal='J'
     C     KODTOK        CHAIN     KODTOTY                            30
     C   30              eval      Error = 'OrderType not found'
     C     KODT2K        CHAIN     KODTOTY                            30
     C                   ENDIF
S02  C**                 ENDIF
N02   * AVVIKENDE BRUKERID / MAL FOR HEURx -parametre
N02  c                   move      'HEURU'       PAID
N02  c     BrParKey      chain     BRPARF
N02  c                   if        %found
N02  c                   movel     PAVRDA        HEURxUsr         10
N02  c                   endif
N02
      * gyldige oppdragstyper for denne bruker
     C                   move      *blanks       OtString        500
     C                   MOVE      'HEURO'       PAID
N02  c     Heur2         tag
     C     BrParKey      setll     BRPARF
     C     BrParKey      reade     BRPARF                                 33
     C     *in33         doweq     '0'
N02  c                   if        Modul1_2 <> *blanks and
N02  c                             Modul1_2 <> %subst(PAVRDA:1:2)
N02  c                   goto      NextRec
N02  c                   endif
N03  c                   if        OtString = *blanks
N03  c                   eval      OtString = ','
N03  c                   endif
     c                   eval      OtString = %trim(OtString)
     c                                      + %trim(%subst(PAVRDA:3))+','
N02  c     NextRec       tag
     C     BrParKey      reade     BRPARF                                 33
     c                   enddo
N02   * hvis ingen typer på useren - sjekk om det finnes på dummy/mal-user HEURXUSR
N02  C                   if        OtString = *blanks and
N02  C                             HEURxUSR<>*blanks and
N02  C                             PABRID  <>HEURxUSR
