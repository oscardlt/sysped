             PGM
             DCL        VAR(&QUSER) TYPE(*CHAR) LEN(10)
             DCL        VAR(&EPOST) TYPE(*CHAR) LEN(70)
             DCL        VAR(&IFS) TYPE(*CHAR) LEN(50) VALUE('sende +
                          ifsfil til meg selv')
             DCL        VAR(&BANE) TYPE(*CHAR) LEN(256)
             DCL        VAR(&AVBRYT) TYPE(*CHAR) LEN(1)
             DCL        VAR(&RPLNA) TYPE(*CHAR) LEN(8) +
                          VALUE('*CURRENT')
             DCL        VAR(&RPLAD) TYPE(*CHAR) LEN(8)
             RTVJOBA    USER(&QUSER)
             CALL       PGM(EPOS09) PARM(&BANE &AVBRYT)
             IF         COND(&AVBRYT = 'J') THEN(GOTO CMDLBL(SLUTT))
             ADDLIBLE MMAIL
             MONMSG     MSGID(CPF0000)
             CALL       PGM(EPOS04) PARM(&QUSER &RPLNA &RPLAD &EPOST)
             EMLSTMF    SUBJECT(&IFS) FROMNAME(&QUSER) +
                          FROMADDR(&EPOST) TO(&EPOST/&QUSER/*TO) +
                          STMF(&BANE)
             RMVLIBLE   LIB(MMAIL)
             MONMSG     MSGID(CPF0000)

SLUTT:       ENDPGM
