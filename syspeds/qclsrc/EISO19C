/* *********************************************************************   */
/*       * RETTINGER I DETTE PROGRAM:                                      */
/* PTFnr:*Sek Sig Vers  Beskrivelse..........................              */
/* """"""*"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""    */
/* 10035 * 01 YBC PTF10 SEND E-POST                                        */
/* 10222 * 02 YBC PTF10 SEND TIL FLERE MOTTAKER                            */
/* ********************************************************************    */
             PGM        PARM(&SAKN &SND &STMF)
             DCL        VAR(&INFOP) TYPE(*CHAR) LEN(1)
             DCL        VAR(&FILEN) TYPE(*CHAR) LEN(10)
             DCL        VAR(&SAKN) TYPE(*CHAR) LEN(7)
             DCL        VAR(&SND) TYPE(*CHAR) LEN(1)
             DCL        VAR(&STMF) TYPE(*CHAR) LEN(50)
             DCL        VAR(&EMNE) TYPE(*CHAR) LEN(35)
             DCL        VAR(&SENDER) TYPE(*CHAR) LEN(30)
             DCL        VAR(&SNDADR) TYPE(*CHAR) LEN(50)
             DCL        VAR(&MOTTAKER) TYPE(*CHAR) LEN(30)
             DCL        VAR(&MOTADR) TYPE(*CHAR) LEN(50)
/*N02*/      DCL        VAR(&CC1ADR) TYPE(*CHAR) LEN(50)
/*N02*/      DCL        VAR(&CC2ADR) TYPE(*CHAR) LEN(50)
/*N02*/      DCL        VAR(&CC3ADR) TYPE(*CHAR) LEN(50)
             DCL        VAR(&QJOB) TYPE(*CHAR) LEN(10)
             DCL        VAR(&QUSER) TYPE(*CHAR) LEN(10)
             DCL        VAR(&QNBR) TYPE(*CHAR) LEN(6)

             RTVJOBA    JOB(&QJOB) USER(&QUSER) NBR(&QNBR)

    /* OVERRIDE PRINTERFILE/SKRIV-FR.BEV  */
             OVRPRTF    FILE(EISO19P) DEV(FAX3812) DEVTYPE(*AFPDS) +
                          PAGESIZE(70 85) LPI(6) CPI(10) OVRFLW(70) +
                          FRONTOVL(LOGOSPED) OUTQ(SYCGIOUTQ) +
                          FORMTYPE(*STD) SPLFOWN(*JOB)
/*E02*/      CALL       PGM(EISO19R) PARM(&SAKN &SND &EMNE &SENDER +
                          &SNDADR &MOTTAKER &MOTADR &CC1ADR &CC2ADR +
                          &CC3ADR &STMF)

             ADDLIBLE   LIB(MMAIL)
             MONMSG     MSGID(CPF0000)
/*S02        CHGVAR     VAR(&STMF) VALUE('/pdf/tmp/ISO' *TCAT &SAKN +
                          *TCAT '.PDF')      */
             CVTSPLFPDF SPLF(EISO19P) JOB(&QNBR/&QUSER/&QJOB) +
                          SPLNBR(*LAST) TOPDF(&STMF)
             IF         COND(&SND = 'J') THEN(DO)
/*N02*/      IF         COND(&CC3ADR *NE ' ') THEN(DO)
/*N02*/      EMLSTMF    SUBJECT(&EMNE) FROMNAME(&SENDER) +
                          FROMADDR(&SNDADR) +
                          TO(&MOTADR/&MOTTAKER/*TO +
                          &CC1ADR/&CC1ADR/*CC &CC2ADR/&CC2ADR/*CC +
                          &CC3ADR/&CC3ADR/*CC) STMF(&STMF)
/*N02*/      GOTO       CMDLBL(UTSND)
/*N02*/      ENDDO
/*N02*/      IF         COND(&CC2ADR *NE ' ') THEN(DO)
/*N02*/      EMLSTMF    SUBJECT(&EMNE) FROMNAME(&SENDER) +
                          FROMADDR(&SNDADR) +
                          TO(&MOTADR/&MOTTAKER/*TO +
                          &CC1ADR/&CC1ADR/*CC &CC2ADR/&CC2ADR/*CC) +
                          STMF(&STMF)
/*N02*/      GOTO       CMDLBL(UTSND)
/*N02*/      ENDDO
/*N02*/      IF         COND(&CC1ADR *NE ' ') THEN(DO)
/*N02*/      EMLSTMF    SUBJECT(&EMNE) FROMNAME(&SENDER) +
                          FROMADDR(&SNDADR) +
                          TO(&MOTADR/&MOTTAKER/*TO +
                          &CC1ADR/&CC1ADR/*CC) STMF(&STMF)
/*N02*/      GOTO       CMDLBL(UTSND)
/*N02*/      ENDDO
             EMLSTMF    SUBJECT(&EMNE) FROMNAME(&SENDER) +
                          FROMADDR(&SNDADR) +
                          TO(&MOTADR/&MOTTAKER/*TO) STMF(&STMF)
             ENDDO
 UTSND:                                                /*N02*/
             RMVLIBLE   LIB(MMAIL)
             MONMSG     MSGID(CPF0000)

             DLTSPLF    FILE(EISO19P) JOB(&QNBR/&QUSER/&QJOB) +
                          SPLNBR(*LAST)
             MONMSG     MSGID(CPF0000)
    /* */
 SLUTT:      ENDPGM
