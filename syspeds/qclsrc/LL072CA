             PGM        PARM(&FIRMA &AAR &JNR &EKSNR &FLAG)
             DCL        VAR(&FIRMA) TYPE(*CHAR) LEN(2)
             DCL        VAR(&AAR) TYPE(*CHAR) LEN(4)
             DCL        VAR(&JNR) TYPE(*CHAR) LEN(5)
             DCL        VAR(&EKSNR) TYPE(*CHAR) LEN(7)
             DCL        VAR(&FLAG) TYPE(*CHAR) LEN(5)

             IF         COND(&FIRMA = '70') THEN(CHGCURLIB +
                          CURLIB(ABDAT))
             IF         COND(&FIRMA = '01') THEN(CHGCURLIB +
                          CURLIB(IBMDAT))

             CALL       PGM(LL072RA) PARM(&FIRMA &AAR &JNR &EKSNR +
                          &FLAG)
             CHGCURLIB  CURLIB(*CRTDFT)

             ENDPGM
