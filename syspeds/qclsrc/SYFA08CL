             PGM
             DCL        VAR(&MODE) TYPE(*CHAR) LEN(1) VALUE('V')
             DCL        VAR(&STRI) TYPE(*CHAR) LEN(5)
             DCL        VAR(&IN01) TYPE(*LGL) LEN(1)

             OVRMSGF    MSGF(QUSERMSG) TOMSGF(SYMSGF)
             CALL       PGM(SYFA00) PARM(&IN01)

             IF         COND(&IN01 = '0') THEN(CALL PGM(SYFA08) +
                          PARM(&MODE &STRI))

             ENDPGM
