      *
      /free
        JSONstring='{'
        +'¬user¬ : ¬'+%trim(WSUSER)+'¬, '
        +'¬unnr¬ : ¬'+%trim(unnr)+'¬, '
        +'¬embg¬ : ¬'+%trim(embg)+'¬, '
