      *********************************************************
     C     Parse         Begsr
      *********************************************************
      * Get input
     C                   EVAL      WSUSER  = zhbgetvar('USER')
     C                   EVAL      FRANKA  = zhbgetvar('FRANKA')
     C                   EVAL      BESKR   = zhbgetvar('BESKR')
     C                   EVAL      GetVal  = zhbgetvar('GetVal')
     C                   EVAL      FullInfo= zhbgetvar('FullInfo')
N02  C                   EVAL      Modul1_2= zhbgetvar('Modul1_2')
     C
     c                   endsr
      *********************************************************
     C     INIT          Begsr
      *********************************************************
     C                   OPEN      BRIDF
      * Test innlogging
     C     WSUSER        CHAIN     BRIDF                              50
     C     BILIBL        ifeq      *blanks
     C                   callb     'INCGI'
     C                   parm                    BISTDL
     C                   else
     C                   call      BILIBL
     C                   end

     C     FRANKK        KLIST
     C                   KFLD                    KFRUNI
     C                   KFLD                    FRANKA
     C                   EVAL      KFRUNI  = 'FR'
     C     BrParKey      klist
     C                   kfld                    PABRID
     C                   kfld                    PAKUNR
     C                   kfld                    PAID
     C                   MOVE      BIBRID        PABRID
     C                   MOVE      *zeros        PAKUNR

     C   50              eval      Error = 'Invalid userID'
     C  N50              OPEN      BRPARF
     C  N50              OPEN      KODTFR
     C  N50              OPEN      KODTFRLF
     C                   IF        *IN50=*OFF
     C                   IF        GetVal='J'
     C     FRANKK        CHAIN     KODTFR                             30
     C   30              eval      Error = 'Delivery term not found'
     C                   ENDIF
S02  C*                  ENDIF
N02   * AVVIKENDE BRUKERID / MAL FOR HEURx -parametre
N02  c                   move      'HEURU'       PAID
N02  c     BrParKey      chain     BRPARF
N02  c                   if        %found
N02  c                   movel     PAVRDA        HEURxUsr         10
N02  c                   endif
N02
      * gyldige frankaturer   for denne bruker
     C                   move      *blanks       FrString        500
     C                   MOVE      'HEURF'       PAID
N02  c     Heur2         tag
     C     BrParKey      setll     BRPARF
     C     BrParKey      reade     BRPARF                                 33
     C     *in33         doweq     '0'
N02  c                   if        Modul1_2 <> *blanks and
N02  c                             Modul1_2 <> %subst(PAVRDA:1:2)
N02  c                   goto      NextRec
N02  c                   endif
N03  c                   if        FrString = *blanks
N03  c                   eval      FrString = ','
N03  c                   endif
     c                   eval      FrString = %trim(FrString)
     c                                      + %trim(%subst(PAVRDA:3))+','
N02  c     NextRec       tag
     C     BrParKey      reade     BRPARF                                 33
     c                   enddo
N02   * hvis ingen typer på useren - sjekk om det finnes på dummy/mal-user HEURXUSR
N02  C                   if        FrString = *blanks and
N02  C                             HEURxUSR<>*blanks and
N02  C                             PABRID  <>HEURxUSR
N02  C                   eval      PABRID  = HEURxUSR
N02  C                   goto      HEUR2
N02  C                   endif
N02   *
N02  C                   ENDIF
N02  C                   MOVE      BIBRID        PABRID
      *
     c                   endsr
