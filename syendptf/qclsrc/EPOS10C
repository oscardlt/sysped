             PGM        PARM(&EMNE &TXT &EP)
             DCL        VAR(&EMNE) TYPE(*CHAR) LEN(40)
             DCL        VAR(&TXT) TYPE(*CHAR) LEN(256)
             DCL        VAR(&EP) TYPE(*CHAR) LEN(70)

             SNDDST     TYPE(*LMSG) TOINTNET((&EP)) DSTD(&EMNE) +
                          LONGMSG(&TXT) USRID(*CURRENT) SNDFMT(*NOCHG)
             MONMSG     MSGID(CPF0000)

             ENDPGM
