             PGM
             DCL        VAR(&IN01) TYPE(*CHAR) LEN(1) VALUE('0') /* +
                          1=AVSLUTT 0=KJØR */
             DCL        VAR(&AAR) TYPE(*CHAR) LEN(4)
    /**/
    /* ADVARSLER - PASSORD / AVBRUDD???      */
             CALL       PGM(KUNWMR) PARM(&IN01 &AAR)
    /* AVBRUDD / FEIL PASSORD......          */
             IF         COND(&IN01 = '1') THEN(DO)
             SNDPGMMSG  MSG('Programmet ble avbrutt ved F3 eller +
                          p.g.a. feil passord.')
                        GOTO CMDLBL(SLUTT)
                        ENDDO
    /* KJØR SAMLING AV BRUKTE KUNDER/MERKING */
             SBMJOB     CMD(CALL PGM(KUNWCLP2) PARM(&AAR)) +
                          JOB(MERKINAKUN) JOBQ(SYJOBQNMAX)
                                                          /**/
             SNDPGMMSG  MSG('Program som merker ubrukte kunder er +
                          sendt i jobbkø SYJOBQNMAX')
 SLUTT:      ENDPGM
